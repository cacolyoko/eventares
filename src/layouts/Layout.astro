---
import "@fontsource/noto-serif-sc/400.css";
import "@fontsource/noto-serif-sc/500.css";
import "@fontsource/noto-serif-sc/600.css";
import "@fontsource/noto-serif-sc/700.css";
import "@fontsource/poppins/200.css";
import "@fontsource/poppins/300.css";
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";
import Navbar from "@/components/Navbar.astro";
import NavbarMobile from "@/components/NavbarMobile.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Transformamos ideas en eventos inolvidables. Desde conferencias magistrales hasta lanzamientos de productos, nuestra empresa de eventos corporativos crea experiencias impactantes y personalizadas para tu marca. Descubre cómo podemos elevar tu próximo evento a nuevos niveles de éxito y distinción."
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body id="home">
		<Navbar />
		<NavbarMobile />
		<slot />
		<style is:global>
			:root {
				--color-accent: #138bc1;
			}

			html {
				font-family: "Poppins", system-ui, sans-serif;
				background: #000;
			}
		</style>
	</body>
</html>

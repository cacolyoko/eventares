---
import "swiper/css";
import "swiper/css/navigation";
import "swiper/css/pagination";
---

<section class="swiper">
  <hr class={`w-full absolute h-[2px] border-t-0 bg-white`} />
  <div class="swiper-wrapper">
    {
      Array.from({ length: 6 }).map((_, i) => (
        <picture
          class={`swiper-slide h-full flex justify-center items-center bg-cover bg-center hover:drop-shadow-[20px_20px_0px_white] transition-all my-10`}
          style={`background-image: url('/img/corporate-events/img-${i + 1}.webp'); width: 500px; height: 500px; transition-property: all; transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1); transition-duration: 150ms;`}
        />
      ))
    }
  </div>
  <div class="swiper-button-prev h-full"></div>
  <div class="swiper-button-next h-full"></div>
</section>

<style>
  .swiper {
    width: 100%;
    height: 600px;
    margin-top: 80px;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .swiper-wrapper {
    transition-timing-function: linear;
  }
</style>

<script>
  import Swiper from "swiper";
  import { Navigation, Autoplay, FreeMode } from "swiper/modules";

  const swiper2 = new Swiper(".swiper", {
    // configure Swiper to use modules
    modules: [Navigation, Autoplay, FreeMode],

    // Optional parameters
    direction: "horizontal",
    loop: true,
    slidesPerView: "auto",
    centeredSlides: true,
    spaceBetween: 80,

    // Navigation arrows
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },

    autoplay: {
      delay: 1,
      disableOnInteraction: true,
      reverseDirection: true,
    },

    speed: 5000,
    freeMode: true,
  });
</script>
